# Configuração para VPS (72.61.219.15)
# Acesse: http://72.61.219.15:3000 (Next.js) e http://72.61.219.15:8080 (API)

# Para desenvolvimento local (comentado)
# https://app.local:3443 {
#   tls internal
#   @api path /api/*
#   handle @api {
#     reverse_proxy 127.0.0.1:8080
#   }
#   handle {
#     reverse_proxy 127.0.0.1:3000
#   }
# }

# Para produção na VPS
http://72.61.219.15:3000 {
  # API → Spring Boot
  @api path /api/*
  handle @api {
    reverse_proxy 127.0.0.1:8080
  }

  # Todo o resto → Next.js
  handle {
    reverse_proxy 127.0.0.1:3000
  }
}
